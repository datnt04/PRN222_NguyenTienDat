@model List<TravelDataAccess.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
    var availableTrips = ViewBag.AvailableTrips as List<TravelDataAccess.Models.Trip>;
}

<div class="container mt-4">
    <h2><i class="bi bi-calendar-check"></i> My Bookings</h2>

    <!-- Filter Buttons -->
    <div class="mb-3">
        <div class="btn-group" role="group">
            <a asp-action="MyBookings" class="btn @(string.IsNullOrEmpty(ViewBag.StatusFilter) ? "btn-primary" : "btn-outline-primary")">
                <i class="bi bi-list"></i> Show All
            </a>
            <a asp-action="MyBookings" asp-route-statusFilter="Pending" class="btn @(ViewBag.StatusFilter == "Pending" ? "btn-warning" : "btn-outline-warning")">
                <i class="bi bi-clock"></i> Pending Only
            </a>
            <a asp-action="MyBookings" asp-route-statusFilter="Confirmed" class="btn @(ViewBag.StatusFilter == "Confirmed" ? "btn-success" : "btn-outline-success")">
                <i class="bi bi-check-circle"></i> Confirmed Only
            </a>
            <a asp-action="MyBookings" asp-route-statusFilter="Cancelled" class="btn @(ViewBag.StatusFilter == "Cancelled" ? "btn-danger" : "btn-outline-danger")">
                <i class="bi bi-x-circle"></i> Cancelled Only
            </a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            @if (!string.IsNullOrEmpty(ViewBag.StatusFilter))
            {
                <text>No bookings with status "@ViewBag.StatusFilter". <a asp-action="MyBookings" class="alert-link">Show all bookings</a>.</text>
            }
            else
            {
                <text>You don't have any bookings yet. Book a trip below!</text>
            }
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Trip Code</th>
                        <th>Destination</th>
                        <th>Price</th>
                        <th>Booking Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td><strong>@booking.Trip.Code</strong></td>
                            <td>@booking.Trip.Destination</td>
                            <td>$@booking.Trip.Price.ToString("N2")</td>
                            <td>@booking.BookingDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (booking.Status == "Confirmed")
                                {
                                    <span class="badge bg-success">@booking.Status</span>
                                }
                                else if (booking.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">@booking.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@booking.Status</span>
                                }
                            </td>
                            <td>
                                <form asp-action="UpdateStatus" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                    <div class="input-group input-group-sm" style="width: 200px;">
                                        <select name="status" class="form-select">
                                            <option value="Pending" selected="@(booking.Status == "Pending")">Pending</option>
                                            <option value="Confirmed" selected="@(booking.Status == "Confirmed")">Confirmed</option>
                                            <option value="Cancelled" selected="@(booking.Status == "Cancelled")">Cancelled</option>
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Book New Trip Section -->
    <hr class="my-4" />
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Book a New Trip</h4>
        </div>
        <div class="card-body">
            @if (availableTrips != null && availableTrips.Count > 0)
            {
                <form asp-action="Create" method="post" class="row g-3">
                    @Html.AntiForgeryToken()
                    <div class="col-md-8">
                        <label for="tripId" class="form-label">Select Trip</label>
                        <select name="tripId" id="tripId" class="form-select" required>
                            <option value="">-- Choose a trip --</option>
                            @foreach (var trip in availableTrips)
                            {
                                <option value="@trip.TripId">@trip.Code - @trip.Destination ($@trip.Price.ToString("N2")) - [@trip.Status]</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-bookmark-plus"></i> Book This Trip
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-warning mb-0">
                    No trips available for booking at the moment.
                </div>
            }
        </div>
    </div>
</div>

