@model List<TravelDataAccess.Models.Trip>

@{
    ViewData["Title"] = "Trip List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Trip List</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Trip
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            No trips available. Click "Add New Trip" to create one.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Code</th>
                        <th>Destination</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var trip in Model)
                    {
                        <tr>
                            <td><strong>@trip.Code</strong></td>
                            <td>@trip.Destination</td>
                            <td>$@trip.Price.ToString("N2")</td>
                            <td>
                                @if (trip.Status == "Confirmed")
                                {
                                    <span class="badge bg-success">@trip.Status</span>
                                }
                                else if (trip.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">@trip.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@trip.Status</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@trip.TripId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
