@{
    ViewData["Title"] = "Home Page";
    var customerName = Context.Session.GetString("CustomerName");
}

<div class="text-center mt-5">
    @if (!string.IsNullOrEmpty(customerName))
    {
        <h1 class="display-3">Welcome, @customerName!</h1>
        <p class="lead">Manage your travel bookings and explore new destinations.</p>
        
        <div class="row mt-5 justify-content-center">
            @if (Context.Session.GetString("Role") == "Admin")
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100 border-primary">
                        <div class="card-body text-center">
                            <i class="bi bi-airplane-fill" style="font-size: 3rem; color: #0d6efd;"></i>
                            <h5 class="card-title mt-3">Manage Trips</h5>
                            <p class="card-text">Create, edit and manage available trips</p>
                            <a asp-controller="Trip" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-gear-fill"></i> Trip Management
                            </a>
                        </div>
                    </div>
                </div>
            }
            
            @if (Context.Session.GetString("Role") == "Customer")
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100 border-success">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check-fill" style="font-size: 3rem; color: #198754;"></i>
                            <h5 class="card-title mt-3">My Bookings</h5>
                            <p class="card-text">View and manage your travel bookings</p>
                            <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-success">
                                <i class="bi bi-list-task"></i> View My Bookings
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h1 class="display-4">Welcome to Travel Management System</h1>
        <p class="lead">Please login to manage your trips and bookings.</p>
        <hr class="my-4">
        <p>Don't have an account? Contact your travel administrator.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
            <i class="bi bi-box-arrow-in-right"></i> Login Now
        </a>
    }
</div>

